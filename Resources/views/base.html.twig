{# Base interface #}

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{# Bootstrap #}
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
        <link href="{{ asset('bundles/toeictrainer/css/perso.css') }}" rel="stylesheet" media="screen">

		<title>TOEIC Trainer / {% block title %}{% endblock %}</title>

	</head>
	<body>
		<header>
			{% include 'TOEICTrainerBundle:Website:navbar.html.twig' %}
		</header>

		<div class="container">

		{% block completebody %}

			<div class="panel panel-default">
				<div class="panel-body">
					<section>
						{% block body %}
						<header>
							<h1>Welcome!</h1>
						</header>
						<p>You are on the homepage. What would you like to do?</p>					
						{% endblock %}
					</section>
				</div>
			</div>

		{% endblock %}

		{% include 'TOEICTrainerBundle:Website:footer.html.twig' %}

		</div> {# /container #}

		{#Â Javascript related stuff #}
		{% block all_javascripts %}
		    {# jQuery (necessary for Bootstraps JavaScript plugins) #}
	        <script src="{{ asset('js/jquery.js') }}"></script>
	        {# Include all JavaScripts, compiled by Assetic #}
	        <script src="{{ asset('js/bootstrap.js') }}"></script>

	        {# HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries #}
	        {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}

			{% block javascripts %}
			{% endblock %}
		{% endblock %}

	</body>
</html>
