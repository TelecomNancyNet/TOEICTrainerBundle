{% extends 'TOEICTrainerBundle::base.html.twig' %}

{% block body -%}
    <h1>List of Pictures</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Picture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td><img controls src="{{ asset('%path%')|replace({'%path%': entity.getWebPath()}) }}"></img></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('picturefile_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('picturefile_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('picturefile_new') }}">
                Create a new Photograph
            </a>
        </li>
    </ul>
    {% endblock %}
