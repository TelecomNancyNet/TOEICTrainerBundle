{% extends 'TOEICTrainerBundle::base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block jumbotron %}
    <div class="jumbotron">
        <h1>{% block page_title %}page_title{% endblock %}</h1>
        <p>{% block page_subtitle %}page_subtitle{% endblock %}</p>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-8">
            {% block main_content %}
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title">Default template: main_content</h4>
                    </div>
                    <div class="panel-body">
                        <p>You can input some contents :)</p>
                    </div>
                </div>
            {% endblock %}
        </div>

        <div class="col-xs-6 col-md-4">
            {% block right_menu %}
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title">Default template: right_menu</h4>
                    </div>
                    <div class="panel-body">
                        <p>You can input some contents :)</p>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}