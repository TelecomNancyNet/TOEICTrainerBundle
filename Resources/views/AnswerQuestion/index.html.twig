{% extends 'TOEICTrainerBundle::base.html.twig' %}

{% block body -%}
    <h1>List of current Questions/Answers</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Question</th>
                <th>Answer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><audio controls src="{{ asset('%path%')|replace({'%path%': entity.question.getWebPath()}) }}"></audio></td>
                <td><audio controls src="{{ asset('%path%')|replace({'%path%': entity.correctAnswer.getWebPath()}) }}"></audio></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('answerquestion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('answerquestion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('answerquestion_new') }}">
                Create a new Question/Answer
            </a>
        </li>
    </ul>
    {% endblock %}
