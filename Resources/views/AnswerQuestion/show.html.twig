{% extends 'TOEICTrainerBundle::base.html.twig' %}

{% block body -%}
    <h1>Review a Question/Answer</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Question</th>
                <td><audio controls src="{{ asset('%path%')|replace({'%path%': entity.question.getWebPath()}) }}"></audio></td>
            </tr>
            <tr>
                <th>Answer</th>
                <td><audio controls src="{{ asset('%path%')|replace({'%path%': entity.correctAnswer.getWebPath()}) }}"></audio></td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('answerquestion') }}">
            See the  list of Questions/Answers we have
        </a>
    </li>
    <li>
        <a href="{{ path('answerquestion_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    {# <li>{{ form(delete_form) }}</li> #}
</ul>
{% endblock %}
